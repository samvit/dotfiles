#print my dirname whenever i cd somewhere
function cd()
{
  param=$* 2> /dev/null
  if [$param -eq "" 2> ~/.error_log]; then
    builtin cd ~/ 2> ~/.error_log && ls
  else
    builtin cd $param && ls
  fi
}

